<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

    <link rel="stylesheet" type="text/css" href="{$basePath}/css/style.css">

    <script type="text/javascript" src="{$basePath}/js/jquery.js"></script>
    <script type="text/javascript" src="{$basePath}/js/nette.ajax.js"></script>
    <script type="text/javascript" src="{$basePath}/js/netteForms.js"></script>
    <script type="text/javascript" src="{$basePath}/js/main.js"></script>


    <title>{ifset title}{include title|stripHtml} | {/ifset}Deffender UCP</title>
</head>

<body>
<div class="container">
    <div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

    {if $user->isLoggedIn()}
        <div class="page-header">
            <div class="row">
                <div class="col">
                    {$user->getIdentity()->username}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {$lastIp}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {$credits}
                </div>
            </div>
        </div>

        <div n:class="menu">
            <nav class="navbar navbar-light bg-dark">
                <a n:href="Characters:" class="nav-link">Seznam postav</a>
                <a n:href="Characters:restore" class="nav-link">Obnovení postavy</a>
                <a n:href="Password:" class="nav-link">Změna hesla</a>
                <a n:href="Trade:" class="nav-link">Výměna postavy</a>
                <a n:href="Homepage:logout" class="nav-link">Logout</a>
            </nav>
        </div>
    {/if}

    {include content}

    {block scripts}
        <script src="https://nette.github.io/resources/js/netteForms.min.js"></script>
    {/block}
</div>
</body>
</html>
